---
import ButtonP from "./ButtonP.astro";
import Shadow from "./Shadow.astro";

interface Props {
	title: string;
	body: string;
	href: string;
	button: string;
	styler?: string | "";
}

const { href, title, button, body, styler } = Astro.props;

const stylex: string =
	styler === "black" ? "bg-black text-white" : "text-black";
---

<div
	class=`place-self-start self-start flex flex-col px-5 py-12 ${stylex} flex items-start text-start justify-between gap-6 rounded-lg w-full`
>
		<h2 class="text-2xl md:text-3xl font-medium">
			{title}
		</h2>
		<p class="text-xl font-normal">
			{body}
		</p>
		<a href=""></a>
</div>
