---
import ButtonP from "./ButtonP.astro";

interface Props {
	title: string;
	body: string;
	href: string;
	button: string;
	background?: "gray" | "black";
	alignment?: "center" | "start";
}

const {
	href,
	title,
	body,
	button,
} = Astro.props;
---

<div
	class="max-w-[370px] flex flex-col md:flex-row items-center justify-center gap-12 px-5 py-12 md:px-12 md:py-12"
>
	<div
		class="text-black flex-1 flex flex-col items-center md:items-start text-center md:text-start justify-between gap-6"
	>
		<h2 class="text-2xl md:text-3xl font-medium">
			{title}
		</h2>
		<p class="text-xl font-normal">
			{body}
		</p>
			<ButtonP href={href} title={button} />
	</div>
</div>
