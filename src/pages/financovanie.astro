---
import Shadow from "../components/Shadow.astro";
import Layout from "../layouts/Layout.astro";
import { FINANCOVANIE_TITLE, FINANCOVANIE_STEPS } from "../data/financovanie";
---

<Layout title="">
	<div class="py-10 mx-auto">
		<Shadow background="black w-full">
			<div
				class="flex flex-col md:flex-row items-center justify-center px-6 py-12 md:px-12 md:py-12"
			>
				<div
					class="flex flex-col items-center md:text-start justify-between gap-6 mx-auto"
				>
					<h1
						class="text-white text-4xl text-center md:text-5xl font-medium"
					>
						{FINANCOVANIE_TITLE}
					</h1>
				</div>
			</div>
		</Shadow>
	</div>
	<div
		class="py-10 container max-w-4xl mx-auto flex flex-col items-center justify-center gap-8"
	>
		{
			FINANCOVANIE_STEPS.map((item) => (
				<Shadow stylesh="py-12 px-6 flex flex-col items-start justify-center gap-5">
					<h3 class="font-bold text-2xl md:text-3xl">{item.title}</h3>
					<p class="font-semibold text-xl bg-accentLight px-2 py-2 rounded-xl">
						{item.text.toUpperCase()}
					</p>
                    {item.text1 && <p class="font-semibold text-xl bg-accentLight px-2 py-2 rounded-xl">
                        {item.text1.toUpperCase()}
                    </p>}
                    {item.text2 && <p class="font-semibold text-xl bg-accentLight px-2 py-2 rounded-xl">
                        {item.text2.toUpperCase()}
                    </p>}
				</Shadow>
			))
		}
	</div>
</Layout>
