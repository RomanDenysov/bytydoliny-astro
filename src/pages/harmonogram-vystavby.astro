---
export const prerender = true;
import Shadow from "../components/Shadow.astro";
import Layout from "../layouts/Layout.astro";
import {
	HARMONOGRAM_TITLE,
	HARMONOGRAM_PIKS,
} from "../data/harmonogram-vystavby";
---

<Layout
	title="Nové moderné byty vo Veľkom Šariši | Byty Doliny"
	description="Štýlové nové byty vo Veľkom Šariši, pripravené na to, aby ste z nich urobili svoj domov. Objavte moderný komfort v atraktívnom prostredí."
>
	<div class="py-10 mx-auto">
		<Shadow
			background="black"
			stylesh="flex mx-auto w-full max-w-[1100px] flex-col md:flex-row items-center justify-center px-6 py-12 md:px-12"
		>
			<div
				class="flex flex-col items-center md:text-start justify-between gap-6 mx-auto"
			>
				<h1
					class="text-white font-spec text-4xl text-center md:text-5xl font-medium"
				>
					{HARMONOGRAM_TITLE}
				</h1>
			</div>
		</Shadow>
	</div>

	<div
		class="py-10 container max-w-5xl flex flex-col md:flex-row items-center md:items-start justify-center mx-auto gap-6"
	>
		{
			HARMONOGRAM_PIKS.map((item) => (
				<Shadow stylesh="py-12 px-6 flex flex-col items-start justify-center gap-5 w-full">
					<h3 class="font-bold font-spec text-2xl md:text-3xl">
						{item.title}
					</h3>
					<p
						id="small-caps"
						class="font-semibold text-xl bg-accentLight px-4 py-2 rounded-xl"
					>
						{item.descr.toUpperCase()}
					</p>
					<div
						id="small-caps"
						class="self-center flex flex-col items-center justify-center gap-5 w-full"
					>
						{item?.piks?.map((pik) => (
							<div class="flex flex-col items-center justify-center bg-black text-primary p-2 w-full rounded-2xl">
								<span class="font-semibold text-xl">
									{pik.text.toUpperCase()}
								</span>
								<span class="font-semibold text-xl">
									{pik.date.toUpperCase()}
								</span>
							</div>
						))}
					</div>
				</Shadow>
			))
		}
	</div>
</Layout>
<style>
	#small-caps {
		font-variant: all-small-caps;
	}
</style>
