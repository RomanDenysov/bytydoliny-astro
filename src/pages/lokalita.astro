---
export const prerender = true;
import Shadow from "../components/Shadow.astro";
import Layout from "../layouts/Layout.astro";
import { LOKALITA_HERO, LOKALITA_CARDS } from "../data/lokalita";

const { title, text } = LOKALITA_HERO;
---

<Layout
	title="Moderné bytové domy vo Veľkom Šariši | Byty Doliny"
	description="Byty Doliny sa nachádzajú v malebnej obci Veľký Šariš, len 10 minút jazdy od Prešova. Na dosah ruky máte nevyhnutné služby a plnohodnotnú občiansku vybavenosť."
>
	<div class="py-10 mx-auto">
		<Shadow
			background="black"
			stylesh="mx-auto h-full max-h-full max-w-[1100px] flex flex-col md:flex-row items-center md:items-start gap-12 px-6 py-12 md:px-12 md:py-12"
		>
			<div
				class="w-full md:w-1/2 h-full md:h-max flex max-w-[350px] md:max-w-full flex-col items-start text-center md:text-start justify-between gap-6 xl:gap-10"
			>
				<h1
					class="text-white font-spec text-4xl xl:text-5xl font-medium"
				>
					{title}
				</h1>
				<p class="text-white text-xl font-normal mb-4">
					{text}
				</p>
			</div>
			<img
				src={"/images/lokalita2.webp"}
				alt={"Nové moderné byty vo Veľkom Šariši"}
				class="rounded-xl aspect-video object-center object-cover w-full md:w-1/2 h-full"
			/>
		</Shadow>
	</div>
	<div
		class="py-10 w-full mx-auto container grid grid-cols-1 md:grid-cols-lokalita items-center justify-center place-items-center grid-flow-row gap-x-10 gap-y-8"
	>
		{
			LOKALITA_CARDS.map((item) => (
				<div
					id="rows"
					class="md:min-w-[350px] w-fit rounded-2xl shadow-sh z-10 px-8 py-12 flex bg-background flex-col items-start justify-center gap-6 max-w-[520px] h-full"
				>
					<h3 class="text-2xl font-spec md:text-3xl font-bold">
						{item.title}
					</h3>
					<p class="text-xl font-normal">{item.text}</p>
				</div>
			))
		}
	</div>
</Layout>

<style>
	#rows {
		grid-row: span 1;
	}
	#rows:nth-child(2n) {
		grid-row: span 2;
	}
	#rows:nth-child(3n) {
		grid-row: span 2;
	}
</style>
