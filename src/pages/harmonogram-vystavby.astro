---
import Shadow from "../components/Shadow.astro";
import Layout from "../layouts/Layout.astro";
import {
	HARMONOGRAM_TITLE,
	HARMONOGRAM_PIKS,
} from "../data/harmonogram-vystavby";
---

<Layout title="">
	<div class="py-10 mx-auto">
		<Shadow background="black w-full">
			<div
				class="flex flex-col md:flex-row items-center justify-center px-6 py-12 md:px-12 md:py-12"
			>
				<div
					class="flex flex-col items-centermd:text-start justify-between gap-6 mx-auto"
				>
					<h1
						class="text-white text-4xl text-center md:text-5xl font-medium"
					>
						{HARMONOGRAM_TITLE}
					</h1>
				</div>
			</div>
		</Shadow>
	</div>
	<div
		class="py-10 container max-w-5xl flex items-start justify-center mx-auto gap-6"
	>
		{
			HARMONOGRAM_PIKS.map((item) => (
				<Shadow stylesh="py-12 px-6 flex flex-col items-start justify-center gap-5">
					<h3 class="font-bold text-2xl md:text-3xl">{item.title}</h3>
					<p class="font-semibold text-xl bg-accentLight px-2 py-2 rounded-xl">
						{item.descr.toUpperCase()}
					</p>
					<div class="self-center flex flex-col items-center justify-center gap-5 w-full">
						{item?.piks?.map((pik) => (
							<div class="flex flex-col items-center justify-center bg-black text-primary p-2 w-full rounded-2xl">
								<span class="font-normal text-xl">{pik.text.toUpperCase()}</span>
								<span class="font-normal text-xl">{pik.date.toUpperCase()}</span>
							</div>
						))}
					</div>
				</Shadow>
			))
		}
	</div>
</Layout>
